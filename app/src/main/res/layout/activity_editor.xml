<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.EditorActivity">
    <uk.co.senab.photoview.PhotoView
        android:visibility="visible"
        android:id="@+id/photo_view_edit_activity"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <jp.co.cyberagent.android.gpuimage.GPUImageView
        android:visibility="gone"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:id="@+id/gpu_image_view_editor_activity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" />
    <RelativeLayout
        android:focusable="true"
        android:clickable="true"
        android:visibility="gone"
        android:id="@+id/relative_layout_editor_activity_close"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/relative_layout_editor_activity_saturation"
        android:layout_above="@+id/relative_layout_buttons"
        android:layout_margin="4dp"
        android:background="@drawable/bg_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatSeekBar

            android:id="@+id/seek_bar_editor_activity_saturation"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="60dp"
            android:min="-100"
            android:max="100"
            android:progress="1"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <TextView
            android:id="@+id/text_view_progress_editor_activity_saturation"
            android:padding="4dp"
            android:background="@drawable/border_left_transparent"
            android:layout_alignParentRight="true"
            android:textAlignment="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="12dp"
            android:text="0%"
            android:layout_width="60dp"
            android:layout_height="50dp" />
    </RelativeLayout>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/relative_layout_editor_activity_blur"
        android:layout_above="@+id/relative_layout_buttons"
        android:layout_margin="4dp"
        android:background="@drawable/bg_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatSeekBar

            android:id="@+id/seek_bar_editor_activity_blur"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="60dp"
            android:min="0"
            android:max="30"
            android:progress="0"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <TextView
            android:id="@+id/text_view_progress_editor_activity_blur"
            android:padding="4dp"
            android:background="@drawable/border_left_transparent"
            android:layout_alignParentRight="true"
            android:textAlignment="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="12dp"
            android:text="0%"
            android:layout_width="60dp"
            android:layout_height="50dp" />
    </RelativeLayout>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/relative_layout_editor_activity_brightness"
        android:layout_above="@+id/relative_layout_buttons"
        android:layout_margin="4dp"
        android:background="@drawable/bg_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/seek_bar_editor_activity_brightness"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="60dp"
            android:min="-100"
            android:max="100"
            android:progress="0"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
        <TextView
            android:id="@+id/text_view_progress_editor_activity_brightness"
            android:padding="4dp"
            android:background="@drawable/border_left_transparent"
            android:layout_alignParentRight="true"
            android:textAlignment="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="12dp"
            android:text="0%"
            android:layout_width="60dp"
            android:layout_height="50dp" />
    </RelativeLayout>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/relative_layout_editor_activity_contrast"
        android:layout_above="@+id/relative_layout_buttons"
        android:layout_margin="4dp"
        android:background="@drawable/bg_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/seek_bar_editor_activity_contrast"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="60dp"
            android:min="-100"
            android:max="100"
            android:progress="0"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
        <TextView
            android:id="@+id/text_view_progress_editor_activity_contrast"
            android:padding="4dp"
            android:background="@drawable/border_left_transparent"
            android:layout_alignParentRight="true"
            android:textAlignment="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="12dp"
            android:text="0%"
            android:layout_width="60dp"
            android:layout_height="50dp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relative_layout_buttons"
        android:background="@drawable/border_top_control"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingTop="3dp"
            android:weightSum="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_margin="2dp"
                android:background="@drawable/bg_btn_wall"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/linear_layout_editor_activity_blur"
                    android:background="?attr/selectableItemBackground"
                    android:focusable="true"
                    android:clickable="true"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/image_view_editor_activity_blur"

                        android:tint="@color/primary_text"
                        android:padding="5dp"
                        app:srcCompat="@drawable/ic_blur"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />
                    <TextView
                        android:id="@+id/text_view_editor_activity_blur"
                        android:layout_margin="5dp"
                        android:textColor="@color/primary_text"
                        android:textSize="10dp"
                        android:textStyle="bold"
                        android:text="Blur"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_margin="2dp"
                android:background="@drawable/bg_btn_wall"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:visibility="visible"
                    android:id="@+id/linear_layout_editor_activity_brightness"
                    android:background="?attr/selectableItemBackground"
                    android:focusable="true"
                    android:clickable="true"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/image_view_editor_activity_brightness"
                        android:tint="@color/primary_text"
                        android:padding="5dp"
                        app:srcCompat="@drawable/ic_brightness"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                    <TextView
                        android:id="@+id/text_view_editor_activity_brightness"

                        android:layout_margin="5dp"
                        android:textColor="@color/primary_text"
                        android:textSize="10dp"
                        android:textStyle="bold"
                        android:text="Brightness"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_margin="2dp"
                android:background="@drawable/bg_btn_wall"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:visibility="visible"
                    android:id="@+id/linear_layout_editor_activity_contrast"
                    android:background="?attr/selectableItemBackground"
                    android:focusable="true"
                    android:clickable="true"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/image_view_editor_activity_contrast"
                        android:tint="@color/primary_text"
                        android:padding="5dp"
                        app:srcCompat="@drawable/ic_tonality"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                    <TextView
                        android:id="@+id/text_view_editor_activity_contrast"

                        android:layout_margin="5dp"
                        android:textColor="@color/primary_text"
                        android:textSize="10dp"
                        android:textStyle="bold"
                        android:text="Contrast"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:layout_margin="2dp"
                android:background="@drawable/bg_btn_wall"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/linear_layout_editor_activity_saturation"
                    android:background="?attr/selectableItemBackground"
                    android:focusable="true"
                    android:clickable="true"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/image_view_editor_activity_saturation"
                        android:tint="@color/primary_text"
                        android:padding="5dp"
                        app:srcCompat="@drawable/ic_invert_colors"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />
                    <TextView
                        android:id="@+id/text_view_editor_activity_saturation"
                        android:layout_margin="5dp"
                        android:textColor="@color/primary_text"
                        android:textSize="10dp"
                        android:textStyle="bold"
                        android:text="Saturation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_margin="2dp"
                android:background="@drawable/bg_btn_wall"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/linear_layout_editor_activity_crop"
                    android:background="?attr/selectableItemBackground"
                    android:focusable="true"
                    android:clickable="true"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:tint="@color/primary_text"
                        android:padding="5dp"
                        app:srcCompat="@drawable/ic_crop_rotate"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />
                    <TextView
                        android:layout_margin="5dp"
                        android:textColor="@color/primary_text"
                        android:textSize="10dp"
                        android:textStyle="bold"
                        android:text="Crop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_margin="2dp"
                android:background="@drawable/bg_btn_wall"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/linear_layout_editor_activity_done"
                    android:background="?attr/selectableItemBackground"
                    android:focusable="true"
                    android:clickable="true"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/image_view_editor_activity_check"
                        android:tint="@color/black"
                        android:padding="5dp"
                        app:srcCompat="@drawable/ic_check"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />
                    <TextView
                        android:layout_margin="5dp"
                        android:textColor="@color/primary_text"
                        android:textSize="10dp"
                        android:textStyle="bold"
                        android:text="Done"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>